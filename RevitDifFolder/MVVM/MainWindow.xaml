<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider HorizontalAlignment="Left" Margin="342,97,0,0" VerticalAlignment="Top" Width="120" Value="{Binding Add1}"/>
        <Slider HorizontalAlignment="Left" Margin="342,155,0,0" VerticalAlignment="Top" Width="120" Value="{Binding Add2}"/>
        <TextBox HorizontalAlignment="Left" Margin="342,200,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Sum}"/>
        <Button  x:Name="Sum" Content="Sum"  HorizontalAlignment="Left"     Command="{Binding AddCommand}" Margin="223,163,0,0" VerticalAlignment="Top"  />


    </Grid>
</Window>
